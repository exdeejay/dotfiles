set ignorecase
set smartcase

set backspace=indent,eol,start

set number
set hlsearch

set hidden
set splitbelow
set splitright
set nowrap

set tabstop=8
set softtabstop=4
set shiftwidth=4
set noexpandtab
set autoindent
filetype plugin indent on

set mouse=a
set ttymouse=sgr

nmap <Leader>s :source $MYVIMRC
nmap <Leader>v :e $MYVIMRC

map <F7> gg=G<C-o><C-o>

